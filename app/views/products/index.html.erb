<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |f| %>
      <tr>
        <td><%= f.title %></td>
        <td><%= f.description %></td>
        <td><%= f.price %></td>
        <td><%= f.category %></td>
        <td><%= link_to 'Show', product_path(f), method: :show %></td>
        <td><%= link_to 'Edit', edit_product_path(f), method: :edit %></td>
        <td><%= link_to 'Delete product', product_path(f), method: :delete, data: { confirm: 'Are you sure you want to delete this product?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

