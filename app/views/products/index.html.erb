<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product_path(product), method: :show %></td>
        <td><%= link_to 'Edit', edit_product_path(product), method: :edit %></td>
        <td><%= button_to 'Destroy', product_path(product), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

